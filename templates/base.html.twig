<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <h1><a href="{{ path('home') }}">Films</a></h1>
            <ul>
                {% for film in films %}
                    <li><a href="{{ path('film', { slug: film.slug }) }}">{{ film }}</a></li>
                {% endfor %}
                <li><a href="{{ path('easyadmin') }}">Admin</a></li>
            </ul>
        </header>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>

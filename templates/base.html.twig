<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet" />
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
            <link href="{{ asset('style.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <h1 class="sr-only">Film Comments</h1>

            <nav class="navbar navbar-expand-xl navbar-light bg-light">
                <div class="container mt-4 mb-3">
                    <a class="navbar-brand mr-4 pr-2" href="{{ path('home') }}">
                        &#128217; Film Comments
                    </a>

                    <div id="header-menu">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="{{ path('easyadmin') }}">
                                    Admin
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <nav class="bg-light border-bottom">
                <div class="container">
                    {% for film in films %}
                        <a class="nav-film" href="{{ path('film', { slug: film.slug }) }}">
                            {{ film }}
                        </a>
                    {% endfor %}
                </div>
            </nav>
        </header>

        <main role="main" class="container mt-5">
            {% block body %}{% endblock %}
        </main>

        <footer class="mt-7 px-3 py-5 text-center text-muted">
            <p>
                Film Comments
            </p>
            <p>
                <a href="#" class="text-white">Back to top</a>
            </p>
        </footer>

        {% block javascripts %}
        {% endblock %}
    </body>
</html>
